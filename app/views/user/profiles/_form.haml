= simple_form_for(user, url: profile_path) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  -# - if user.errors.any?
  -#   #error_explanation
  -#     %h2
  -#       = pluralize(user.errors.count, "error")
  -#       prohibited this user from being saved:
  -#     %ul
  -#       - user.errors.full_messages.each do |message|
  -#         %li= message
  = f.input :bio_information, input_html: { rows: "5", placeholder: "Set you bio here..." }, label: false

  - [:email, :username, :first_name, :middle_name, :last_name].each do |column|
    .grid-x
      .cell.large-3
        = f.label column.to_sym
      .cell.large-9
        = f.input column.to_sym, label: false
  = f.button :submit, 'Save', class: 'float-right button font-bold small'